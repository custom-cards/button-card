    "url": "https://github.com/custom-cards/button-card/issues"
  },
  "homepage": "https://github.com/custom-cards/button-card#readme",
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
