    "rollup-plugin-node-resolve": "^4.2.4",
    "rollup-plugin-terser": "^5.1.3",
    "rollup-plugin-typescript2": "^0.20.1",
    "ts-lit-plugin": "^1.1.9",
    "typescript": "^3.6.4",
    "typescript-styled-plugin": "^0.14.0"
  },
  "dependencies": {
    "@ctrl/tinycolor": "^2.5.4",
    "@material/mwc-ripple": "^0.13.0",
