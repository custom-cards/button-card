    "rollup-plugin-typescript2": "^0.20.1",
    "ts-lit-plugin": "^1.0.6",
    "typescript": "^3.4.4",
    "typescript-styled-plugin": "^0.14.0"
  },
  "dependencies": {
    "@ctrl/tinycolor": "^2.4.0",
    "home-assistant-js-websocket": "^3.4.0",
